                                    <DragGestureRecognizer DragStartingCommand="{Binding Source={x:RelativeSource AncestorType={x:Type viewmodel:GameViewModel}}, Path=DragBackStartedCommand}"
                                 DragStartingCommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>

                            </Frame> -->


                            <Frame Padding="0" HeightRequest="200">
                                <Image Source="{Binding LastResetCard.Img}" HeightRequest="200" WidthRequest="150"></Image>
                                <Frame.GestureRecognizers>
                                    <DropGestureRecognizer DropCommand="{Binding CardDropedToResetCommand}" />
                                </Frame.GestureRecognizers>
                            </Frame>

                        </HorizontalStackLayout>


                        <Frame BorderColor="LightGray"
                       HasShadow="True"
                       CornerRadius="12">
                            <Frame.Background>
                                <SolidColorBrush Color="LightGray"/>
                            </Frame.Background>

                            <Frame.GestureRecognizers>
                                <DropGestureRecognizer DropCommand="{Binding Source={x:RelativeSource AncestorType={x:Type viewmodel:GameViewModel}}, Path=BackCardDropedCommand}" />
                            </Frame.GestureRecognizers>

